<main class="c-layout c-layout-profile">
  <div class="c-layout-profile__back">
    {{> Link to=urlBack className="c-router-arrow" }}
  </div>
  <div class="c-layout-profile__wrap">
    <div class="c-layout-profile__avatar">
      <div class="c-profile-avatar">
        <span class="c-profile-avatar__upload" onclick="window.showPopup('{{ popupType }}')">
          Поменять аватар
        </span>
        <img class="c-profile-avatar__img" src="{{ host }}/resources{{ srcAvatar }}" alt="Avatar">
      </div>
      {{> Title text=title className="c-layout-profile__title" }}
    </div>
    <div class="c-layout-profile__body">
      {{> @partial-block }}
    </div>
  </div>

  {{#> Popup popupTitle=popupTitle className=popupType }}
    <form id="formAvatar" class="form-avatar">
      <label for="avatar_{{ popupType }}" id="avatarFileName_{{ popupType }}">
        Выбрать файл на компьютере
      </label>
      <input id="avatar_{{ popupType }}" type="file" name="avatar" accept="image/*">
      {{> Button text="Поменять" }}
    </form>
  {{/ Popup }}
</main>
