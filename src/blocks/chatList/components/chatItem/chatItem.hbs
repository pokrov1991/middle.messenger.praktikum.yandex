<div 
  class="c-chat-item{{#if active}} c-chat-item_active{{/if}}"
  id="{{ id }}"
>
  <div class="c-chat-item__avatar">
    {{#if avatar}} 
      <img src="{{ avatar }}" alt="{{ title }}" />
    {{/if}}
  </div>
  <div class="c-chat-item__content">
    <span>{{ title }}</span>
    <p>{{ message }}</p>
  </div>
  <div class="c-chat-item__info">
    <span class="c-chat-item__date">{{ date }}</span>
    {{#if unread_count}} 
      <b class="c-chat-item__unread">{{ unread_count }}</b>
    {{/if}}
  </div>
</div>
