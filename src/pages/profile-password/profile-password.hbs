  <div class="c-page c-page-profile c-page-profile_password">
    <div class="c-page-profile__fields">
      {{> Input label="Старый пароль" id="oldPassword" name="oldPassword" }}
      {{> Input label="Новый пароль" id="newPassword" name="newPassword" }}
