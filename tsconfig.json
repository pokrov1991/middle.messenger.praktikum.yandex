{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,//вернуть в true
    "sourceMap": true,
    "strictNullChecks": true,//вернуть в true
    "skipLibCheck": true,
    "allowJs": true//убрать
  },
  "include": ["src", "global.d.ts"]
} 
